        </Style>
        <Style x:Key="SakuraPaletteMenu" TargetType="{x:Type Menu}">
            <Setter Property="Background" Value="#FF99E2"></Setter>
            <Setter Property="Foreground" Value="#121212"></Setter>
        </Style>


